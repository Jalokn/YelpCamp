<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%= campground._id%>/?_method=put" class="needs-validation" method="post"
                novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input type="text" name="campground[title]" class="form-control" id="title" placeholder="Camp Name"
                        value="<%= campground.title %>" required>

                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input type="text" name="campground[location]" id="location" class="form-control"
                        placeholder="City, State" value="<%= campground.location %>" required>

                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Upload Images</label>
                    <input type="file" name="campground[images]" id="image" class="form-control" placeholder="Image"
                        value="<%= campground.image %>" multiple>

                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" value="<%= campground.price %>"
                            required>

                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Campground Description</label>
                    <textarea name="campground[description]" id="description"
                        class="form-control"><%= campground.description %> required</textarea>

                </div>
                <div class="mb-3">
                    <% campground.images.forEach(function(img, i) { %>
                        <img src="<%=img.thumbnail%>" class="img-thumbnail">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]"
                                value="<%= img.filename %>">
                        </div>
                        <label for="image-<%= i %>">Delete?</label>
                        <% }) %>
                </div>
                <div class="d-grid">
                    <button class="btn btn-success my-2">Submit Changes</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Back to Campground</a>
        </div>
    </div>
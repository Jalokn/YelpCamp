<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground._id%>/?_method=put  " method="post">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input type="text" name="campground[title]" class="form-control" id="title" placeholder="Camp Name"
                        value="<%= campground.title %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input type="text" name="campground[location]" id="location" class="form-control"
                        placeholder="City, State" value="<%= campground.location %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input type="text" name="campground[image]" id="image" class="form-control" placeholder="Image"
                        value="<%= campground.image %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" value="<%= campground.price %>">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Campground Description</label>
                    <textarea name="campground[description]" id="description"
                        class="form-control"><%= campground.description %></textarea>
                </div>

                <button class="btn btn-dark my-2">Submit Changes</button>
            </form>
            <a href="/camgrounds/<%= campground._id %>">Back to Campground</a>
        </div>
    </div>